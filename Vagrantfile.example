# -*- mode: ruby -*-
# vi: set ft=ruby :

Vagrant.configure(2) do |config|
  config.vm.box      = "opscode-ubuntu-1204"
  config.vm.box_url  = "https://opscode-vm-bento.s3.amazonaws.com/vagrant/virtualbox/opscode_ubuntu-12.04_chef-provisionerless.box"

  config.vm.hostname = "default-ubuntu-1204.vagrantup.com"

  config.vm.synced_folder ".", "/vagrant", create: true

  config.omnibus.cache_packages = true
  config.omnibus.chef_version   = :latest

  config.vm.provision "chef_zero" do |chef|
    chef.cookbooks_path = "test/fixtures/cookbooks"
    chef.add_recipe "git::default"
  end
end

